<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<p>
  Status:
  <strong><%= @task.completed ? "Completed" : "Not completed yet" %></strong>
</p>

<p>
  <%= link_to "Back to Task List", tasks_path %><br>
  <%= link_to "Edit", edit_task_path(@task) %><br>
  <%= button_to "Delete", task_path(@task),
    method: :delete, form: { data: { turbo_confirm: "Delete this task?" } } %>
</p>
